<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Propiedad</field>
            <field name="res_model">estate.property</field> <!-- modelo al que responde -->
            <field name="view_mode">list,form</field> <!-- accion a realizar -->
        </record>

        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Buscar Propiedades">
                    
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>

                    <filter string="Mis Propiedades" name="filter_my_properties" domain="[('create_uid','=',uid)]" />

                    <filter string="Agrupar por Usuario" name="groupby_users" context="{'group_by':'create_uid'}"/>

                    <filter string="Agrupar por fecha" name="groupby_date" context="{'group_by':'create_date:date'}"/>  

                    <filter string="Agrupar por codigo postal" name="groupby_postcode" context="{'group_by':'postcode'}"/>
 
                    <filter string="Agrupar por estado" name="groupby_state" context="{'group_by':'state'}"/>
                       
                    <filter string="Agrupar por propiedades disponibles" name="filter_avalible_properties" domain="[('state','in',['new','offer received'])]"/>


                </search>
            </field>
        </record>


        <record id="estate_property_list" model="ir.ui.view">
            <field name ="name">estate.property.list</field>
            <field name ="model">estate.property</field>
            <field name ="arch" type="xml">
               <list string="Lista de propieades">
                    <field name ="name"/>
                    <field name ="tag_ids" widget="many2many_tags" />
                    <field name ="postcode"/>
                    <field name ="expected_price"/>
                    <field name ="bedrooms"/>
                    <field name ="living_area"/>
                    <field name ="selling_price"/>
                    <field name ="date_availability"/>
                    <field name ="date_availability"/>

               </list>
            </field>
        </record>


        <record id="estate_property_form" model="ir.ui.view">
            <field name ="name">estate.property.form</field>
            <field name ="model">estate.property</field>
            <field name ="arch" type="xml">
                <form string="Formulario para propieades">
                
                    <header>
                    <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>

                    <notebook>
                        <page string="Principal"> 
                            <group>
                                <h1>
                                    <field name="name" placeholder="Nombre de propiedad"/>
                                </h1>

                            </group>
                            <group>
                                <h3>
                                    <field name="tag_ids" placeholder="Etiquetas de propiedad" widget="many2many_tags"/>
                                </h3>

                            </group>

                            <group>
                                <group>
                                    <field name="property_type_id" placeholder="Tipo propiedad"/>
                                    <field name="postcode" placeholder="Codigo postal"/>
                                    <field name="date_availability" placeholder="Fecha de disponibilidad"/>
                                    <field name="description" placeholder="Habitaciones"/>
                                    <field name="living_area" placeholder="Superficie cubierta"/>
                                    <field name="bedrooms" placeholder="Habitaciones"/>
                                    <field name="facades" placeholder="Fachadas"/>
                                    <field name="garage" placeholder="Garage"/>
                                    
                                </group> 

                                <group>
                                <field name="expected_price" placeholder="Precio de venta esperado"/>
                                <field name="selling_price" placeholder="Precio de venta"/>
                                <field name="garden" placeholder="Jardin"/>
                                <field name="garden_orientation" placeholder="Orientacion de jardin"/>
                                <field name="garden_area" placeholder="Area de jardin"/>
                                </group>
                           </group>
                        
                        </page>

                        <page string="Mas Info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="salesman_id"/>
                            </group>
                        </page>

                    </notebook>
                    </sheet>

                </form>
            </field>

        </record>

    </data>
</odoo>